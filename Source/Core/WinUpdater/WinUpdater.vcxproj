    <Manifest Include="Updater.exe.manifest" />
  </ItemGroup>
  <Target Name="AfterBuild" Inputs="@(SourceFiles)" Outputs="@(SourceFiles -> '$(BinaryOutputDir)%(Filename)%(Extension)')">
